{
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
